<view>
  <view class="header">
    <!-- <image src="./bg.png" class="bg-image" /> -->
    <view class="userinfo-wrapper">
      <view class="userinfo-avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class="userinfo-nickname">
        <open-data type="userNickName"></open-data>
      </view>
    </view>
  </view>
  <scroll-view scroll-y class="content">
    <view class="tab">
      <view class="like item">
        <view class="icon">
             <image src="../image/keep.png" />
        </view>
        <view class="text">我的收藏</view>
        <view class="more">
          <image src="../image/tubiao.png" />
        </view>
      </view>
      <view class="rencent item">
        <view class="icon">
         <image src="../image/playing.png" />
        </view>
        <view class="text">最近播放</view>
        <view class="more">
          <image src="../image/tubiao.png" />
        </view>
      </view>
      <view class="time item" bindtap="showActionSheets" data-type="{{actionSheetsTime}}" data-types="time">
        <view class="icon">
          <image src="../image/time.png" />
        </view>
        <view class="text">定时关闭</view>
        <view class="more">
          <image src="../image/tubiao.png" />
        </view>
      </view>
    </view>
  </scroll-view>
</view>